<Page x:Class="UI.GameSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="GameSet">

    <Grid>
        <Grid>
            <Button x:Name="End_turn" Content="End Turn" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Height="100" Margin="0,0,0,50" />
            <Button x:Name="Show_hint" Content="Show Hint" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Height="100" Margin="500,0,0,50" />
            <Button x:Name="Undo" Content="Undo" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,500,50" />
        </Grid>
    </Grid>
</Page>
