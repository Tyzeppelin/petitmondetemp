<Page x:Class="UI.GameSet"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="GameSet" Background="DarkGray">

    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="NAME PLAYER plays." HorizontalAlignment="Center"  Margin="10,10,10,10"/>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="10,10,10,10" >
            <Grid.RowDefinitions >
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.Column="0" Fill="Beige" Stroke="Black"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="Beige" Stroke="Black"/>
            <Rectangle Grid.Row="0" Grid.Column="2" Fill="Beige" Stroke="Black"/>
            <Rectangle Grid.Row="0" Grid.Column="3" Fill="Beige" Stroke="Black"/>
            <Rectangle Grid.Row="0" Grid.Column="4" Fill="Beige" Stroke="Black"/>
            <Rectangle Grid.Row="0" Grid.Column="5" Fill="Aqua" Stroke="Black"/>
            
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="End_turn" Content="End Turn" HorizontalAlignment="Center" Width="100" Height="50" />
            <Button Grid.Column="1" x:Name="Show_hint" Content="Show Hint" HorizontalAlignment="Center" Width="100" Height="50" />
            <Button Grid.Column="2" x:Name="Undo" Content="Undo" Width="100" Height="50" HorizontalAlignment="Center" />
            <Button Grid.Column="3" x:Name="Show_help" Content="Help !" HorizontalAlignment="Center" Width="100" Height="50" /> 
        </Grid>
    </Grid>
</Page>
